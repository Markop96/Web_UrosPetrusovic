@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Potvrda registracije";
}

<div class="container" style="padding-top: 50px; padding-bottom: 100px;">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card shadow-lg border-0 rounded-4 p-4 p-md-5">
                <div class="mb-4">
                    <div class="display-1 text-primary">
                        <i class="bi bi-envelope-check"></i>
                    </div>
                </div>

                <h2 class="fw-bold mb-3">Proverite svoj email</h2>

                @{
                    if (@Model.DisplayConfirmAccountLink)
                    {
                        <div class="alert alert-warning border-0 rounded-3 mb-4">
                            <p class="small mb-0">
                                <strong>Napomena:</strong> Aplikacija trenutno nema podešen pravi sistem za slanje e-pošte.
                                U realnom okruženju, ovaj link bi vam stigao u inbox.
                            </p>
                        </div>

                        <p class="text-muted mb-4">
                            Kliknite na dugme ispod kako biste simulirali potvrdu naloga i nastavili dalje:
                        </p>

                        <a id="confirm-link" href="@Model.EmailConfirmationUrl" class="btn btn-primary btn-lg rounded-pill px-5 shadow-sm">
                            POTVRDI NALOG
                        </a>
                    }
                    else
                    {
                        <p class="fs-5 text-muted mb-4">
                            Poslali smo vam link za potvrdu. Molimo vas da kliknete na njega kako biste aktivirali svoj nalog.
                        </p>
                        <div class="d-grid gap-2 col-8 mx-auto">
                            <a href="/" class="btn btn-outline-secondary rounded-pill">Nazad na početnu</a>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .bi-envelope-check {
        filter: drop-shadow(0 4px 8px rgba(13, 110, 253, 0.2));
    }

    .card {
        background: white;
    }
</style>