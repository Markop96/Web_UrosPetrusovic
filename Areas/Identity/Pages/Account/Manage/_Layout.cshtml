@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Views/Shared/_Layout.cshtml"; 
    }
}

<div class="container mt-5 pt-4">
    <div class="row">
        <div class="col-12 mb-4 text-center text-md-start">
            <h2 class="fw-bold">👤 Postavke Profila</h2>
            <p class="text-muted small">Upravljajte svojim nalogom, lozinkom i sigurnosnim postavkama.</p>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card shadow-sm border-0 rounded-4 p-2">
                <div class="card-body p-2">
                    <nav class="nav flex-column nav-pills custom-profile-nav">
                        <partial name="_ManageNav" />
                    </nav>
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <div class="card shadow-sm border-0 rounded-4 p-4 min-vh-50">
                <div class="card-body">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .custom-profile-nav .nav-link {
        color: #495057;
        border-radius: 10px;
        margin-bottom: 5px;
        transition: all 0.2s;
        font-weight: 500;
        padding: 12px 15px;
    }

    .custom-profile-nav .nav-link:hover {
        background-color: #f1f3f5;
        color: #0d6efd;
    }

    .custom-profile-nav .nav-link.active {
        background-color: #0d6efd !important;
        color: white !important;
        box-shadow: 0 4px 10px rgba(13, 110, 253, 0.2);
    }

    .min-vh-50 {
        min-height: 50vh;
    }

    h4 {
        font-weight: 700;
        margin-bottom: 20px;
        color: #212529;
    }
</style>

@section Scripts {
    @RenderSection("Scripts", required: false)
}