@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Email potvrđen";
}

<div class="container" style="padding-top: 50px; padding-bottom: 100px;">
    <div class="row justify-content-center">
        <div class="col-md-5 text-center">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">

                <div class="card-header bg-success py-3 border-0"></div>

                <div class="card-body p-5">                    <div class="mb-4">
                        <i class="bi bi-patch-check-fill text-success" style="font-size: 5rem;"></i>
                    </div>

                    <h2 class="fw-bold mb-3">Uspešno potvrđeno!</h2>

                    <div class="mb-4">
                        <partial name="_StatusMessage" model="Model.StatusMessage" />
                        <p class="text-muted">Vaš nalog je sada aktiviran. Možete pristupiti svim funkcijama prodavnice.</p>
                    </div>

                    <div class="d-grid gap-3">
                        <a asp-page="./Login" class="btn btn-success btn-lg rounded-pill fw-bold shadow-sm py-3">
                            NASTAVI NA PRIJAVU
                        </a>
                        <a href="/" class="btn btn-link text-decoration-none text-muted small">
                            Nazad na početnu stranicu
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    #status-message.alert {
        border: none;
        background-color: #e9f7ef;
        color: #198754;
        font-weight: 500;
        border-radius: 10px;
    }
</style>