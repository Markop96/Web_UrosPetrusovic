@model UrosPetrusovic.Models.Order
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@{
    ViewData["Title"] = "Izmena porudžbine #" + Model.Id;
}

<div class="container" style="padding-top: 150px; padding-bottom: 100px;">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">✏️ Izmena porudžbine #@Model.Id</h2>
        <span class="badge bg-warning text-dark px-3 py-2">Status: @Model.Status</span>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-dark text-white p-3">
                    <h5 class="mb-0">Stavke porudžbine</h5>
                </div>
                <div class="card-body p-0">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4">Artikal</th>
                                <th class="text-center">Cena</th>
                                <th class="text-center" style="width: 150px;">Količina</th>
                                <th class="text-end pe-4">Ukupno</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderItems)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="fw-bold">@item.Item?.Name</div>
                                        <small class="text-muted">Šifra: @item.ItemId</small>
                                    </td>
                                    <td class="text-center">@item.UnitPrice.ToString("N2") RSD</td>
                                    <td class="text-center">
                                        <form asp-action="UpdateItemQuantity" method="post" class="d-flex align-items-center justify-content-center">
                                            <input type="hidden" name="orderId" value="@Model.Id" />
                                            <input type="hidden" name="orderItemId" value="@item.Id" />
                                            <div class="input-group input-group-sm">
                                                <input type="number" name="newQuantity" value="@item.Quantity"
                                                       class="form-control text-center" min="1" />
                                                <button type="submit" class="btn btn-outline-primary">
                                                    💾
                                                </button>
                                            </div>
                                        </form>
                                    </td>
                                    <td class="text-end pe-4 fw-bold">
                                        @((item.UnitPrice * item.Quantity).ToString("N2")) RSD
                                        <form asp-action="RemoveItem" method="post" class="d-inline ms-2">
                                            <input type="hidden" name="orderId" value="@Model.Id" />
                                            <input type="hidden" name="orderItemId" value="@item.Id" />
                                            <button type="submit" class="btn btn-sm text-danger" title="Ukloni stavku">
                                                ❌
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm border-0 rounded-4 bg-light p-4">
                <h4 class="fw-bold">Rezime izmena</h4>
                <hr />
                <div class="mb-3 text-muted">
                    <small>Datum porudžbine: @Model.OrderDate.ToString("dd.MM.yyyy HH:mm")</small>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <span class="h5 mb-0">Ukupno:</span>
                    <h3 class="text-primary fw-bold mb-0">@Model.TotalPrice.ToString("N2") RSD</h3>
                </div>

                <div class="d-grid gap-2">
                    <a asp-action="MyOrders" class="btn btn-dark py-2 rounded-pill fw-bold">
                        Završi izmene
                    </a>
                    <button type="button" class="btn btn-outline-danger w-100 py-2 rounded-pill" data-bs-toggle="modal" data-bs-target="#cancelModal">
                        Otkaži celu porudžbinu
                    </button>

                    <div class="modal fade" id="cancelModal" tabindex="-1" aria-labelledby="cancelModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content border-0 shadow">
                                <div class="modal-header bg-danger text-white">
                                    <h5 class="modal-title" id="cancelModalLabel">Potvrda otkazivanja</h5>
                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body p-4 text-center">
                                    <i class="bi bi-exclamation-triangle text-danger" style="font-size: 3rem;"></i>
                                    <p class="mt-3">Da li ste sigurni da želite da otkažete porudžbinu <strong>#@Model.Id</strong>?</p>
                                    <p class="text-muted small">Ova radnja se ne može poništiti.</p>
                                </div>
                                <div class="modal-footer border-0">
                                    <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Odustani</button>
                                    <form asp-action="CancelOrder" method="post">
                                        <input type="hidden" name="orderId" value="@Model.Id" />
                                        <button type="submit" class="btn btn-danger rounded-pill px-4">Potvrdi otkazivanje</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>