@model IEnumerable<UrosPetrusovic.Models.Order>

@{
    ViewData["Title"] = "Upravljanje Porudžbinama";
    var statusi = new List<string> { "Na čekanju", "Potrvđeno - čeka na slanje", "Poslato", "Otkazano" };
}

<div class="container" style="padding-top: 70px;">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">🛠️ Administracija Porudžbina</h2>
        <span class="badge bg-primary px-3 py-2">Ukupno: @Model.Count()</span>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-dark text-white">
                    <tr>
                        <th class="ps-4">ID</th>
                        <th>Kupac</th>
                        <th>Datum</th>
                        <th>Iznos</th>
                        <th>Status</th>
                        <th class="text-center">Akcija</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold">#@order.Id</td>
                            <td>
                                <div>@order.User?.UserName</div>
                                <small class="text-muted">@order.User?.Email</small>
                            </td>
                            <td>@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</td>
                            <td class="fw-bold">@order.TotalPrice.ToString("N2") RSD</td>
                            <td>
                                <form asp-action="UpdateStatus" method="post" class="d-flex gap-2">
                                    <input type="hidden" name="orderId" value="@order.Id" />
                                    <select name="newStatus" class="form-select form-select-sm border-2"
                                            style="width: 140px; border-color: @(GetStatusColor(order.Status))">
                                        @foreach (var s in statusi)
                                        {
                                            @if (s == order.Status)
                                            {
                                                <option value="@s" selected>@s</option>
                                            }
                                            else
                                            {
                                                <option value="@s">@s</option>
                                            }
                                        }
                                    </select>
                                    <button type="submit" class="btn btn-sm btn-dark">Sačuvaj</button>
                                </form>
                            </td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-outline-info btn-sm rounded-pill px-3">
                                    Detalji
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@functions {
    string GetStatusColor(string status)
    {
        return status switch
        {
            "Na čekanju" => "#ffc107",
            "Potrvđeno - čeka na slanje" => "#0dcaf0",
            "Poslato" => "#198754",
            "Otkazano" => "#dc3545",
            _ => "#6c757d"
        };
    }
}