@model UrosPetrusovic.Models.Order

@{
    ViewData["Title"] = "Detalji porudžbine #" + Model.Id;
}

<div class="container" style="padding-top: 150px; padding-bottom: 100px;">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">🔍 Detalji porudžbine #@Model.Id</h2>
            <p class="text-muted">Datum: @Model.OrderDate.ToString("dd.MM.yyyy HH:mm")</p>
        </div>
        <div class="text-end">
            @{
                string badgeClass = Model.Status == "Otkazano" ? "bg-danger" :
                Model.Status == "Na čekanju" ? "bg-warning text-dark" : "bg-success";
            }
            <span class="badge @badgeClass rounded-pill px-4 py-2 fs-6">Status: @Model.Status</span>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-header bg-primary text-white p-3">
                    <h5 class="mb-0"><i class="bi bi-person-lines-fill"></i> Podaci za isporuku</h5>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-4 mb-3 mb-md-0">
                            <label class="text-muted small text-uppercase fw-bold d-block">Primalac</label>
                            <span class="fs-5 fw-bold">@Model.CustomerName</span>
                        </div>
                        <div class="col-md-4 mb-3 mb-md-0">
                            <label class="text-muted small text-uppercase fw-bold d-block">Kontakt telefon</label>
                            <span class="fs-5">@Model.ContactPhone</span>
                        </div>
                        <div class="col-md-4">
                            <label class="text-muted small text-uppercase fw-bold d-block">Adresa isporuke</label>
                            <span class="fs-5">@Model.ShippingAddress</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 rounded-4 overflow-hidden mb-4">
        <div class="card-header bg-dark text-white p-3">
            <h5 class="mb-0">Lista artikala</h5>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Proizvod</th>
                        <th class="text-center">Jedinična cena</th>
                        <th class="text-center">Količina</th>
                        <th class="text-end pe-4">Ukupno</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderItems)
                    {
                        <tr>
                            <td class="ps-4">
                                <span class="fw-bold">@item.Item?.Name</span>
                                <br /><small class="text-muted">ID artikla: @item.ItemId</small>
                            </td>
                            <td class="text-center">@item.UnitPrice.ToString("N2") RSD</td>
                            <td class="text-center">@item.Quantity</td>
                            <td class="text-end pe-4 fw-bold">@((item.UnitPrice * item.Quantity).ToString("N2")) RSD</td>
                        </tr>
                    }
                </tbody>
                <tfoot class="bg-light border-top">
                    <tr>
                        <td colspan="3" class="text-end fw-bold py-3">UKUPNO ZA UPLATU:</td>
                        <td class="text-end pe-4 py-3">
                            <h4 class="text-primary fw-bold mb-0">@Model.TotalPrice.ToString("N2") RSD</h4>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

    <div class="d-flex gap-2">
            <a asp-action="AdminIndex" class="btn btn-dark rounded-pill px-4">Nazad u Admin Panel</a>
    </div>
</div>