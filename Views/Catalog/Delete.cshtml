@model UrosPetrusovic.Models.Catalog

@{
    ViewData["Title"] = "Obriši katalog";
}

<div class="container mt-5 pt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="card-body p-5 text-center">
                    <div class="display-1 text-danger mb-4">
                        <i class="bi bi-journal-x"></i>
                    </div>

                    <h3 class="fw-bold text-dark mb-3">Uklanjanje kataloga</h3>

                    <p class="text-muted mb-4">
                        Potvrdom ove akcije trajno ćete obrisati katalog: <br />
                        <span class="badge bg-danger-subtle text-danger fs-6 mt-2 py-2 px-3 border border-danger-subtle">@Model.Name</span>
                    </p>

                    <div class="alert alert-warning border-0 small rounded-3 mb-4 d-flex align-items-center justify-content-center">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <span>Brisanjem kataloga uklanjate i sve njegove reference.</span>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger rounded-pill py-3 fw-bold shadow-sm">
                                <i class="bi bi-trash3 me-2"></i>Potvrdi brisanje
                            </button>
                            <a asp-action="Index" class="btn btn-link text-decoration-none text-secondary fw-bold mt-2">
                                Odustani
                            </a>
                        </div>
                    </form>
                </div>

                <div class="card-footer bg-danger py-1 border-0"></div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .bg-danger-subtle {
        background-color: #fceaea;
    }

    .card {
        animation: scaleIn 0.3s ease-out;
    }

    @@keyframes scaleIn {
        from { opacity: 0; transform: scale(0.9); }
        to { opacity: 1; transform: scale(1); }
    }

    .btn-danger {
        transition: all 0.3s ease;
    }

    .btn-danger:hover {
        background-color: #bb2d3b;
        transform: translateY(-2px);
        box-shadow: 0 8px 15px rgba(220, 53, 69, 0.3);
    }

    .bi-journal-x {
        display: inline-block;
        animation: swing 2s ease-in-out infinite;
    }

    @@keyframes swing {
        0%, 100% { transform: rotate(0deg); }
        25% { transform: rotate(5deg); }
        75% { transform: rotate(-5deg); }
    }
</style>