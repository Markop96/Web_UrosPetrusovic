@model UrosPetrusovic.Models.Item

@{
    ViewData["Title"] = "Brisanje artikla";
}

<div class="container mt-5 pt-5 pb-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger shadow-lg">
                <div class="card-header bg-danger text-white text-center p-4">
                    <h3 class="mb-0">Potvrda brisanja</h3>
                </div>
                <div class="card-body p-4 text-center">
                    <p class="lead">Da li ste sigurni da želite da trajno obrišete artikal:</p>
                    <h4 class="fw-bold">@Model.Name</h4>
                    <p class="text-muted small">Ova akcija je nepovratna.</p>

                    <hr />

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-center gap-3">
                            <button type="submit" class="btn btn-danger btn-lg px-5 shadow-sm">Obriši</button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-light btn-lg px-5 border">Odustani</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>