<section class="contact-section" id="contact">
    <div class="container">
        <h2 class="text-center mb-4">Kontaktirajte nas</h2>
        <form asp-action="Contact" method="post" enctype="multipart/form-data" class="mx-auto" style="max-width:600px;">
            <div class="mb-3">
                <label for="Name" class="form-label">Ime i prezime</label>
                <input type="text" class="form-control" id="Name" name="Name" required>
            </div>
            <div class="mb-3">
                <label for="Email" class="form-label">Email</label>
                <input type="email" class="form-control" id="Email" name="Email" required>
            </div>
            <div class="mb-3">
                <label for="Message" class="form-label">Poruka</label>
                <textarea class="form-control" id="Message" name="Message" rows="4" required></textarea>
            </div>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#successModal">
                Pošalji poruku
            </button>
        </form>
    </div>
</section>


<div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 rounded-4 shadow">
            <div class="modal-header border-0 bg-success text-white rounded-top-4 py-3">
                <h5 class="modal-title fw-bold" id="successModalLabel">Potvrda</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center p-5">
                <div class="display-1 text-success mb-3">
                    <i class="bi bi-check2-circle"></i>
                </div>
                <h3 class="fw-bold">Uspešno poslato!</h3>
                <p class="text-muted">Vaša poruka je uspešno prosleđena našem timu. Odgovorićemo vam u najkraćem mogućem roku.</p>
            </div>
            <div class="modal-footer border-0 pb-4 justify-content-center">
                <button type="button"
                        class="btn btn-success rounded-pill px-5 fw-bold"
                        data-bs-dismiss="modal"
                        onclick="location.reload()">
                    U REDU
                </button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            $('#successModal .btn').on('click', function () {
                location.reload();
            });
        });
    </script>
}